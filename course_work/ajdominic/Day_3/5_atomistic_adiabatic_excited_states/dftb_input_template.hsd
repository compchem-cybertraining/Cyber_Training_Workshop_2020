Geometry = GenFormat {
   <<< "input_name,gen"
}

Driver = {}

Hamiltonian = DFTB {

  SCC = Yes
  SCCTolerance = 1e-8
  SlaterKosterFiles = Type2FileNames {
    Prefix = "/projects/academic/cyberwksp21/Software/data1/dftb/sk/halorg-0-1/"
    Separator = "-"
    Suffix = ".skf"
  }
  MaxAngularMomentum = {
    H = "s"
    F = "p"
    C = "p"
    O = "p"
  }
  Dispersion = LennardJones {
    Parameters = UFFParameters {}
 }
  Filling = Fermi {
    Temperature [K] = 0.00
  }
}

